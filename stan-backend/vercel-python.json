{
  "builds": [
    {
      "src": "main.py",
      "use": "@vercel/python"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "main.py"
    },
    {
      "src": "/(.*)",
      "dest": "main.py"
    }
  ],
  "functions": {
    "main.py": {
      "runtime": "python3.11",
      "maxDuration": 30,
      "environment": {
        "PYTHONPATH": "/var/task"
      }
    }
  },
  "crons": [
    {
      "path": "/api/generate-daily-briefings",
      "schedule": "0 6 * * *"
    }
  ]
}